site_name: dz-mkdocs
site_url: https://danielzamo.github.io/dz-mkdocs/
use_directory_urls: false
#site_dir: public

theme:
  name: readthedocs # material
  language: es
  custom_dir: overrides

plugins:
  - search

extra_css:
  - assets/css/quiz.css

extra_javascript:
  - assets/js/quiz.js

markdown_extensions:
  - admonition
  - toc:
      permalink: true
  - attr_list
  - md_in_html

nav:
  - Inicio: index.md
  - Microsoft learn:
      - Check your knowledge: microsoft-learn/quiz.md

